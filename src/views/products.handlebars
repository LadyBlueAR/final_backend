<div class="products">
    <h1>Hola {{user.first_name}} {{user.last_name}}</h1>
    <button id="logout">Cerrar Sesi√≥n</button>
    <a href="/admin"><button id="btnAdmin" style="visibility: hidden;" rol="{{user.rol}}">Panel de admin</button></a>
    <a href="/documents"><button id="btnDocuments" style="visibility: hidden;" rol="{{user.rol}}">Cargar Documentos</button></a>      
    <a href="/products/create"><button id="btnCreate" style="visibility: hidden;" rol="{{user.rol}}">Crear Producto</button></a>
    <h1 style="text-align: center;">Lista De Productos</h1>    
    <div class="container product-container">        
 <ul>
        {{#each products}}
            <li class="product">
                <h2>{{this.title}}</h2>
                <p>{{this.description}}</p>
                <p>Precio: {{this.price}}</p>
                <button type="submit" id="{{this._id}}" class="addToCart" userCart="{{../user.cart}}">Agregar al Carrito</button>  
                <button type="button" productId="{{this._id}}" class="deleteProduct">Eliminar Producto</button>
            </li>
        {{/each}}
    </ul>
    </div>
    <div class="products-btns"> 
    
    <div class="pagination">
    {{#if hasPrevPage}}
    <a href="{{prevLink}}"><button>Anterior</button></a>
    {{/if}}

    {{page}}

    {{#if hasNextPage}}
    <a href="{{nextLink}}"><button>Siguiente</button></a>
    {{/if}}
    </div>  
    <a href="/carts/{{user.cart}}" id="cartButton"><button>Ver Carrito</button></a>
    </div>  
</div>
<script src="/js/login.js"></script>
<script type="module" src="/js/addToCart.js"></script>
<script type="module" src="/js/createCart.js"></script>
<script type="module" src="/js/deleteProduct.js"></script>




